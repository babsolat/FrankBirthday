<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.happybirthdayfrank.MainActivity"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/frenky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="40dp"
        android:paddingBottom="15dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from all of us at alc(NC,sw,Jos,ay_friends),rccg Jesus House youth, #EFE Nation, we wish frenky a happy birthday"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="we love you scatter, chelsea choose you"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="courtesy @babsolat (legendary ay)"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:textSize="13dp"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
